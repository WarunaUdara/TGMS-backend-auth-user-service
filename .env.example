# Docker Compose Environment Variables Template
# Copy this file to .env and update with your production values

# Server Configuration
SERVER_PORT=8081

# Database Configuration
DB_URL=jdbc:postgresql://postgres:5432/tgms_auth
DB_USERNAME=tgms_user
DB_PASSWORD=change_this_in_production

# JWT Configuration (IMPORTANT: Change in production!)
JWT_SECRET=your-super-secret-jwt-key-minimum-256-bits-please-change-in-production
JWT_EXPIRATION_MS=3600000
JWT_ISSUER=tgms-auth-service

# Spring Profile
SPRING_PROFILES_ACTIVE=prod

# PostgreSQL Configuration
POSTGRES_DB=tgms_auth
POSTGRES_USER=tgms_user
POSTGRES_PASSWORD=change_this_in_production
